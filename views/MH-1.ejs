<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/staff.css">
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <main class="centered">
        <div class="card">
            <h3>Họ và tên: </h3>
            <p>Trạng thái: </p>
            <p>Nơi làm việc: </p>
            <p>Thời gian bắt đầu: </p>
            <p>Thời gian kết thúc: </p>
            <p>Thời gian đã làm việc trong ngày: </p>
        </div>
        <div class="card grid">
            <form action="/" method="post">
                <div class="form-control centered">
                    <label for="startTime">Thời gian hiện tại:</label>
                    <input class="centered" type="text" name="startTime" id="startTime" value="<%= new Date() %>">
                </div>
                <div class="form-control centered">
                    <label for="position">Nơi làm việc:</label>
                    <input type="text" name="position" id="position" value="Công ty">
                </div>
                <button class="btn" type="submit">Bắt đầu</button>
            </form>
            <form action="/" method="post">
                <div class="form-control centered">
                    <label for="endTime">Thời gian kết thúc:</label>
                    <input class="centered" type="text" name="endTime" id="endTime" value="<%= new Date() %>">
                </div>
                <button class="btn" type="submit">Kết thúc</button>
            </form>
        </div>
        <div class="card">
            <h3>Đăng ký nghĩ phép</h3>
            <p>Chọn ngày:</p>
            <p>Số ngày nghĩ phép còn lại:</p>
            <p>Bạn có thể/ không thể đăng ký nghĩ phép</p>
            <p>Chọn số giờ nghĩ:</p>
            <button class="btn" type="submit">Đăng ký nghĩ phép</button>
        </div>
    </main>

<%- include('includes/end.ejs') %>