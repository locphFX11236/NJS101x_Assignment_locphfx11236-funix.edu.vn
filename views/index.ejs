<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/staff.css">
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <% if (staffs.length > 0) { %>
        <div class="grid">
            <% for (let staff of staffs) { %>
                <article class="card staff-item">
                    <div class="card__image">
                        <img src="<%= staff.imageUrl %>" alt="<%= staff.title %>">
                    </div>
                    <a class="card__content" href="/staff/<%= staff._id %>" class="btn">
                        <p class="staff__description">
                            <%= staff.name %>
                        </p>
                    </a>
                    <div class="card__actions">
                        <form action="/check/<%= staff._id %>" method="get">
                            <button class="btn" type="submit">Điểm danh</button>
                        </form>
                        <form action="/salary/<%= staff._id %>" method="get">
                            <button class="btn" type="submit">Thông tin tính lương</button>
                        </form>
                        <form action="/covid/<%= staff._id %>" method="get">
                            <button class="btn" type="submit">Thông tin covid-19</button>
                        </form>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Staffs Found!</h1>
    <% } %>

<%- include('includes/end.ejs') %>