<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/staff.css">
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main class="centered">
        <section class="grid">
            <div class="card">
                <h2>Đăng ký nghĩ phép</h2>
                <form action="/post-annualLeave" method="post">
                    <div class="form-control">
                        <label for="aLDate">Chọn ngày:</label>
                        <input type="date" name="aLDate" id="aLDate">
                    </div>
                    <div class="form-control">
                        <label for="aLHour">Chọn số giờ nghĩ:</label>
                        <input type="number" name="aLHour" id="aLHour" min="0" max="8" step="0.25">
                    </div>
                    <div class="form-control">
                        <label for="LD">Lý do:</label>
                        <textarea name="LD" id="LD" rows="3" cols="40"></textarea>
                    </div>
                    <% if (!user.isManager) { %>
                        <input type="hidden" value="<%= work.staffId %>" name="_id">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn" type="submit" >Đăng ký nghĩ phép</button>
                    <% } %>
                </form>
            </div>
        </section>
        <section class="card">
            <h3>Thông tin nghĩ phép</h3>
            <p>Số ngày nghĩ phép còn lại: </p>
            <p>Bạn <%=  'không thể / có thể' %> đăng ký nghĩ phép</p>
            <h3>Danh sách đăng ký nghĩ trong ngày</h3>
            <div class="grid">
                <div class="card">
                    <p>=========</p>
                    <p>=========</p>
                    <% if (user.isManager) { %>
                        <form action="/confirmAnnu" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" name="_id" value="<%= work.staffId %>">
                            <button class="btn" type="submit">Xác nhận nghĩ phép</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </section>
    </main>

<%- include('includes/end.ejs') %>